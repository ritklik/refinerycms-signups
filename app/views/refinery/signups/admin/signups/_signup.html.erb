<li class='clearfix record <%= cycle("on", "on-hover") %>'>
  <span class='title'>
    <%= link_to signup.name, refinery.signups_admin_signup_path(signup) %> <%= t('.said') %>
    <span class="preview"><%= truncate(strip_tags(sanitize(signup.message)), :length => 60) -%></span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag('delete.png'), refinery.signups_admin_signup_path(signup),
                :class => "cancel confirm-delete",
                :title => t('admin.signups.delete'),
                :'data-confirm' => t('shared.admin.delete.message', :title => signup.name),
                :'data-method' => "delete" -%>

    <%= link_to refinery_icon_tag('zoom.png'), refinery.signups_admin_signup_path(signup),
                :title => t('.read_signup') -%>
  </span>
</li>
