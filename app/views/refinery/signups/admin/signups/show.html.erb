<div id='records'>
  <h2><%= t('.signup') %></h2>
  <table id='signup' class='inquiry'>
      <tr>
        <td>
          <strong>
            <%= t('.name', :default => t('activerecord.attributes.signup.name')) %>
          </strong>
        </td>
        <td>
          <%= @signup.name %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.email', :default => t('activerecord.attributes.signup.email')) %>
          </strong>
        </td>
        <td>
          <%= @signup.email %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.contact_number', :default => t('activerecord.attributes.signup.contact_number')) %>
          </strong>
        </td>
        <td>
          <%= @signup.contact_number %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.language_instruction', :default => t('activerecord.attributes.signup.language_instruction')) %>
          </strong>
        </td>
        <td>
          <%= @signup.language_instruction %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.inquiry', :default => t('activerecord.attributes.signup.inquiry')) %>
          </strong>
        </td>
        <td>
          <%= @signup.inquiry %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.translation', :default => t('activerecord.attributes.signup.translation')) %>
          </strong>
        </td>
        <td>
          <%= @signup.translation %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.coaching', :default => t('activerecord.attributes.signup.coaching')) %>
          </strong>
        </td>
        <td>
          <%= @signup.coaching %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.consultancy', :default => t('activerecord.attributes.signup.consultancy')) %>
          </strong>
        </td>
        <td>
          <%= @signup.consultancy %>
        </td>
      </tr>
      <tr>
        <td valign='top'>
          <strong>
            <%= t('.question', :default => t('activerecord.attributes.signup.question')) %>
          </strong>
        </td>
        <td>
          <p style='margin-top: 0px'>
            <% @signup.message.to_s.gsub("\r\n\r\n", "\r\n").split("\r\n").each_with_index do |sentence, index| %>
              <%=raw "</p><p>" unless index == 0 %>
              <%= sentence %>
            <% end %>
          </p>
        </td>
      </tr>
  </table>
</div>
<div id='actions'>
  <h2><%= t('.details')%></h2>
  <p>
    <strong><%= t('.age') %>:</strong> <%= time_ago_in_words(@signup.created_at) %>
  </p>
  <h2><%= t('.actions') %></h2>
  <ul>
    <li>
      <%= link_to t('.back_to_all_signups'), refinery.url_for(:action => 'index'),
                   :class => "back_icon" %>
    </li>
    <li>
      <%= link_to t('delete', :scope => 'refinery.signups.admin.signups'),
                  refinery.signups_admin_signup_path(@signup),
                  :class => 'delete_icon no-tooltip confirm-delete',
                  :title => t('delete', :scope => 'refinery.signups.admin.signups'),
                  :'data-confirm' => t('message', :scope => 'refinery.admin.delete', :title => @signup.name),
                  :'data-method' => "delete" %>
    </li>
  </ul>
</div>
